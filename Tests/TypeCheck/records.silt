module records where

data Nat : Type where
  Z : Nat
  S : Nat -> Nat

data String : Type where
  [] : String
  _,,_ : Nat -> String -> String

record Person : Type where
  constructor MkPerson
  field
    firstName, middleName, lastName : String
  field
    age : Nat

fred : Person
fred = MkPerson [] [] [] Z

